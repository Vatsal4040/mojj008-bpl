/* ================= CART LOGIC ================= */
function addItem(item) {
  cart[item.name] ??= { ...item, qty: 0 };
  cart[item.name].qty++;
  renderCart();
}

function calculateTotals() {
  let total = 0;
  Object.values(cart).forEach(i => total += i.price * i.qty);
  return { total, remaining: START_MONEY - total };
}

function renderCart() {
  const cartItems = document.getElementById("cartItems");
  cartItems.innerHTML = "";

  Object.values(cart).forEach(i => {
    cartItems.innerHTML += `
      <div class="cart-row">
        <span>${i.emoji} ${i.name} Ã— ${i.qty}</span>
        <div class="cart-controls">
          <button onclick="addItem(${JSON.stringify(i)})">+</button>
        </div>
      </div>
    `;
  });

  const { total, remaining } = calculateTotals();
  document.getElementById("cartTotal").innerHTML =
    `Total: $${total.toLocaleString()}<br>
     Left: ${remaining >= 0 ? "$"+remaining.toLocaleString() : "âˆ’$"+Math.abs(remaining).toLocaleString()}`;

  const fill = document.getElementById("moneyFill");
  const pct = Math.max(0, remaining / START_MONEY) * 100;
  fill.style.width = pct + "%";
  fill.classList.toggle("negative", remaining < 0);
}

